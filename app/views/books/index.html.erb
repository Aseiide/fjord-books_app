<p id="notice"><%= notice %></p>
<h1><%= t('views.books')%></h1>

<table>
  <thead>
    <tr>
      <th><%= t('views.title') %></th>
      <th><%= t('views.memo') %></th>
      <th><%= t('views.author') %></th>
      <th><%= t('views.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('views.show'), book %></td>
        <td><%= link_to t('views.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('views.destroy'), book, method: :delete, data: { confirm: t('views.sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.new book'), new_book_path %>
